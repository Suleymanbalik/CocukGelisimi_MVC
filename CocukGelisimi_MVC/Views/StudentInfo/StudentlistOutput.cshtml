@using CocukGelisimi_MVC.Models.Entity

@model List<Table_Student>


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    @*------font awesome ıcons------*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    @*------fbootstrap ıcons------*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    @*------all bootstrap------*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    @*------my stylesheet------*@
    <link href="~/StyleSheet1.css" rel="stylesheet" />

    @*------links for table (css)------*@
    <link href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css" rel="stylesheet">




    <title>StudentlistOutput</title>
</head>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="table-responsive table-bordered mt-3">
                    <table class="table caption-top" id="tblStudentlist">
                        <caption><strong>ÖĞRENCİ LİSTESİ</strong></caption>
                        <thead class="tableheadStudentlistOutput" style="background-color:#706565">
                            <tr>
                                <th>Öğrenci No</th>
                                <th>Öğrenci Ad</th>
                                <th>Öğrenci Soyad</th>
                                <th>Öğrenci Yaş(Ay)</th>
                                <th>Öğrenci Fotoğraf</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var stdnt in Model)
                            {
                                <tr>
                                    <td>@stdnt.StudentID</td>
                                    <td>@stdnt.StudentFirstName</td>
                                    <td>@stdnt.StudentLastName</td>
                                    <td>@stdnt.StudentYearAsMonth</td>
                                    <td><img src="@stdnt.StudentPicture" width="100" height="100" /></td>

                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>





    @*------Scripts for tables and buttons------*@
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/DataTableScripts/jquery.dataTables.min.js"></script>
    <script src="~/DataTableScripts/dataTables.buttons.min.js"></script>
    <script src="~/DataTableScripts/jszip.min.js"></script>
    <script src="~/DataTableScripts/pdfmake.min.js"></script>
    <script src="~/DataTableScripts/vfs_fonts.js"></script>
    <script src="~/DataTableScripts/buttons.html5.min.js"></script>
    <script src="~/DataTableScripts/buttons.print.min.js"></script>


    @*------JavaScript Codes for Table------*@
    <script>
        $(document).ready(function () {
            $('#tblStudentlist').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>


















